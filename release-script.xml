<?xml version="1.0" encoding="UTF-8"?>
<!--
This is the Ant script (see http:/ant.apache.org) to generate builds for DiagramoScript
-->
<project name="diagramo" default="list" basedir=".">

    <property name="php.dir" value="c:/Tools/php5.4.0"/>    
    <property name="build.dir" value="${basedir}/build"/>    
    <property name="dist.dir" value="${basedir}/dist"/>
    <property name="docs.dir" value="${basedir}/documents"/>
    <property name="build-all-in-one.dir" value="${basedir}/build-all-in-one"/>
    <property name="dist-all-in-one.dir" value="${basedir}/dist-all-in-one"/>
    <property name="build-light.dir" value="${basedir}/build-light"/>
    <property name="dist-light.dir" value="${basedir}/dist-light"/>
    <property name="temp.dir" value="${basedir}/temp"/>
    <property name="web.dir" value="${basedir}/web"/>
    <property name="editor.dir" value="${web.dir}/editor"/>
    
    <property name="script.release.file" value="${dist.dir}/diagramo-lamp.zip"/>
    <property name="all-in-one.release.file" value="${dist.dir}/diagramo-all-in-one.zip"/>
    <property name="light.release.file" value="${dist.dir}/diagramo-light.zip"/>


    <target name="list">
        <echo>+---------------------------------------------------+</echo>
        <echo>| Run ant [target]                                  |</echo>
        <echo>| list - prints this help                           |</echo>
        <echo>| prepare - prepare folder structure                |</echo>
        <echo>| build-all-in-one - build specific for all-in-one  |</echo>
        <echo>| js.compress - compress JavaScript                 |</echo>
        <echo>| release-lamp - release LAMP version               |</echo>
        <echo>| release-all-in-one - release all-in-one version   |</echo>
        <echo>| release - creates ZIP distribution file           |</echo>
        <echo>| clean - clean project                             |</echo>
        <echo>+---------------------------------------------------+</echo>
    </target>


    <target name="prepare">
        <echo>+-------------------PREPARE-------------------------+</echo>
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${dist.dir}"/>
        <mkdir dir="${temp.dir}"/>
    </target>



    <target name="build-basic" depends="prepare">
        <echo>+------------------BUILD BASIC------------------------------+</echo>
        <copy todir="${build.dir}">
            <fileset dir="${web.dir}">
                <exclude name="editor/common/settings.php"/>

                <exclude name="editor/test/"/>
                <exclude name="editor/data/diagrams/"/>
                <exclude name="editor/data/import/"/>
                                                
                <exclude name="editor/data/diagramo.db"/>

                <exclude name="editor/exporter/*.png"/>
                <exclude name="editor/exporter/*.svg"/>
                <exclude name="editor/exporter/*.jpg"/>
                <exclude name="editor/exporter/*.bat"/>
            </fileset>            
        </copy>
        
        <copyfile src="${basedir}/LICENSE.txt" dest="${build.dir}/LICENSE.txt"></copyfile>
        <copyfile src="${basedir}/gpl-2.0.txt" dest="${build.dir}/gpl-2.0.txt"></copyfile>

        <replace file="${build.dir}/install/umbilicus.php" token="http://diagramo.test" value="http://diagramo.com" />
    </target>



    <!-- 
    We need to compress JavaScript here as from here it will be copied
    to different build versions
    @see: http://www.julienlecomte.net/blog/2007/09/16/ 
    -->
    <target name="js.compress" depends="build-basic">
        <echo>+------------------Compress JavaScript-----------------------------+</echo>
        


        <echo>Compress connections.js</echo>
        <java jar="./documents/compressor/yuicompressor-2.4.2.jar" fork="true">
            <arg value="${build.dir}/editor/lib/connections.js"/>
            <arg value="-o"/>
            <arg value="${build.dir}/editor/lib/connections.js"/>
        </java>

        
        <echo>Compress handles.js</echo>
        <java jar="./documents/compressor/yuicompressor-2.4.2.jar" fork="true">
            <arg value="${build.dir}/editor/lib/handles.js"/>
            <arg value="-o"/>
            <arg value="${build.dir}/editor/lib/handles.js"/>
        </java>
        
        
        
        <echo>Compress stack.js</echo>
        <java jar="./documents/compressor/yuicompressor-2.4.2.jar" fork="true">
            <arg value="${build.dir}/editor/lib/stack.js"/>
            <arg value="-o"/>
            <arg value="${build.dir}/editor/lib/stack.js"/>
        </java>
        
        
        <echo>Compress text.js</echo>
        <java jar="./documents/compressor/yuicompressor-2.4.2.jar" fork="true">
            <arg value="${build.dir}/editor/lib/text.js"/>
            <arg value="-o"/>
            <arg value="${build.dir}/editor/lib/text.js"/>
        </java>
                

        <echo>Compress main.js</echo>
        <java jar="./documents/compressor/yuicompressor-2.4.2.jar" fork="true">
            <arg value="${build.dir}/editor/lib/main.js"/>
            <arg value="-o"/>
            <arg value="${build.dir}/editor/lib/main.js"/>
        </java>
        
    </target>
	
        
    <target name="build-lamp" depends="js.compress">
        <echo>+------------------BUILD LAMP VERSION------------------------------+</echo>
    </target>
	
    <target name="build-all-in-one" depends="js.compress">
        <echo>+------------------BUILD ALL-IN-ONE VERSION -----------------------+</echo>
        <copy todir="${build-all-in-one.dir}">
            <fileset dir="${build.dir}">
            </fileset>
        </copy>
		
        <copy todir="${build-all-in-one.dir}/php">
            <fileset dir="${php.dir}">
            </fileset>
        </copy>
		
        <copy todir="${build-all-in-one.dir}">
            <fileset dir="${docs.dir}/all-in-one">
            </fileset>
        </copy>
    </target>
    
    
    <target name="build-light" depends="js.compress">
        <echo>+------------------BUILD LIGHT VERSION-----------------------------+</echo>
        <copy todir="${build-light.dir}">
            <fileset dir="${build.dir}">
                <exclude name="**/*.php"/>
                <exclude name="install/"/>
                <exclude name="assets/"/>
                <exclude name="editor/data/"/>
                <exclude name="editor/common/"/>
                <exclude name="README.TXT"/>
            </fileset>
        </copy>
    </target>
    
    
    <target name="build-all" depends="build-lamp, build-light, build-all-in-one"></target>
      
    
    <target name="release-lamp" depends="build-lamp">
        <echo>+------------------RELEASE LAMP-----------------------------+</echo>
        <zip destfile="${script.release.file}" basedir="${build.dir}" />
    </target>
    
    
    <target name="release-all-in-one" depends="build-all-in-one">
        <echo>+------------------RELEASE ALL IN ONE-----------------------------+</echo>
        <zip destfile="${all-in-one.release.file}" basedir="${build-all-in-one.dir}" />
    </target>
    
    
    <target name="release-light" depends="build-light">
        <echo>+------------------RELEASE LIGHT VERSION-----------------------------+</echo>
        <zip destfile="${light.release.file}" basedir="${build-light.dir}" />
    </target>    
    
    
    <target name="release" depends="release-lamp, release-all-in-one, release-light">
        <echo>+------------------RELEASE-----------------------------+</echo>
    </target>
    

    <target name="clean">
        <echo>+------------------SCRIPT CLEAN----------------------------+</echo>
        <delete dir="${build.dir}"/>
        <delete dir="${dist.dir}" />
        <delete dir="${build-all-in-one.dir}"/>
        <delete dir="${dist-all-in-one.dir}" />
        <delete dir="${build-light.dir}"/>
        <delete dir="${dist-light.dir}" />
        <delete dir="${temp.dir}" />
    </target>


</project>